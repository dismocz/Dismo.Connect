@inherits LayoutComponentBase
@inject UriMaker Uri;
@using MudBlazor
@using Dismo.Connect.Application

<MudThemeProvider Theme="DismoTheme"/>
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">CONNECT</MudText>
        <MudAppBarSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <MudNavMenu>
            <MudNavLink Href="@Uri.Route("")" Icon="@Icons.Filled.Home">Home</MudNavLink>
            <MudNavLink Href="@Uri.Route("devices")" Icon="@Icons.Filled.BluetoothSearching">Devices</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="mt-8 px-8" MaxWidth="MaxWidth.False">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    MudTheme DismoTheme = new()
    {
        Palette = new Palette()
        {
            Primary = "#3fc1c9",
            AppbarBackground = "#3fc1c9"
        }
    };
}
